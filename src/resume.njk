---
layout: layouts/base.njk
title: Resume
---

<div class="resume-content">
  <header class="resume-header">
    <h1>{{ resume.name }}</h1>
    <p class="headline">{{ resume.headline }}</p>
    <p>
      <a href="mailto:{{ resume.email }}">{{ resume.email }}</a> |
      <a href="{{ resume.website }}">decoding.ink</a> |
      <a href="{{ resume.linkedin }}">LinkedIn</a>
    </p>
  </header>

  <section class="resume-section">
    <h2>Summary</h2>
    <p>{{ resume.summary }}</p>
  </section>

  <section class="resume-section">
    <h2>Key Competencies</h2>
    <div class="competencies">
      {%- for competency in resume.competencies %}
      <span class="competency">{{ competency }}</span>
      {%- endfor %}
    </div>
  </section>

  <section class="resume-section">
    <h2>Experience</h2>
    {%- for job in resume.experience %}
    <div class="resume-entry">
      <h3>{{ job.title }}</h3>
      <p class="company">{{ job.company }}</p>
      <p class="dates">{{ job.dateRange }}</p>
      <ul>
        {%- for highlight in job.highlights %}
        <li>{{ highlight }}</li>
        {%- endfor %}
      </ul>
    </div>
    {%- endfor %}
  </section>

  <section class="resume-section">
    <h2>Education</h2>
    {%- for edu in resume.education %}
    <div class="resume-entry">
      <h3>{{ edu.institution }}</h3>
      <p class="company">{{ edu.degree }}</p>
      <p class="dates">{{ edu.dateRange }}</p>
      {%- if edu.note %}
      <p>{{ edu.note }}</p>
      {%- endif %}
    </div>
    {%- endfor %}
  </section>

  <section class="resume-section">
    <h2>Skills</h2>
    <p><strong>Languages:</strong> {{ resume.skills.languages | join(', ') }}</p>
    <p><strong>AI/ML:</strong> {{ resume.skills.ai_ml | join(', ') }}</p>
    <p><strong>Models:</strong> {{ resume.skills.models | join(', ') }}</p>
    <p><strong>Platforms:</strong> {{ resume.skills.platforms | join(', ') }}</p>
    <p><strong>Infrastructure:</strong> {{ resume.skills.infrastructure | join(', ') }}</p>
    <p><strong>Practices:</strong> {{ resume.skills.practices | join(', ') }}</p>
  </section>

  <section class="resume-section">
    <h2>Awards & Recognition</h2>
    <ul>
      {%- for award in resume.awards %}
      <li>{{ award.name }}, {{ award.year }}</li>
      {%- endfor %}
    </ul>
  </section>

  <section class="resume-section">
    <h2>Selected Publications & Talks</h2>
    {%- if resume.highlightedPublications.length > 0 %}
    <h3>Publications</h3>
    <ul>
      {%- for pub in resume.highlightedPublications %}
      <li><a href="{{ pub.url }}">{{ pub.title }}</a>. <em>{{ pub.publication }}</em>, {{ pub.year }}.</li>
      {%- endfor %}
    </ul>
    {%- endif %}
    {%- if resume.highlightedTalks.length > 0 %}
    <h3>Talks</h3>
    <ul>
      {%- for talk in resume.highlightedTalks %}
      <li><a href="{{ talk.url }}">{{ talk.title }}</a>. {{ talk.event }}, {{ talk.year }}.</li>
      {%- endfor %}
    </ul>
    {%- endif %}
    <p>See the <a href="/speaking/">Speaking</a> and <a href="/writing/">Writing</a> pages for more.</p>
  </section>
</div>
